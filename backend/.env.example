# HanDoc AI Backend Environment Variables

# =============================================================================
# 기본 설정
# =============================================================================
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# =============================================================================
# 보안 설정
# =============================================================================
SECRET_KEY=your-super-secret-key-change-in-production-min-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# =============================================================================
# 서버 설정
# =============================================================================
HOST=0.0.0.0
PORT=8000

# =============================================================================
# 데이터베이스 설정
# =============================================================================
DATABASE_URL=postgresql://handoc_user:handoc_password@localhost:5432/handoc_ai
DATABASE_ECHO=false

# =============================================================================
# Redis 설정
# =============================================================================
REDIS_URL=redis://localhost:6379/0
CACHE_TTL=3600

# =============================================================================
# OpenAI 설정
# =============================================================================
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL_DEFAULT=gpt-3.5-turbo
OPENAI_MODEL_PREMIUM=gpt-4
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=0.7

# =============================================================================
# 파일 업로드 설정
# =============================================================================
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads
ALLOWED_FILE_TYPES=["application/pdf"]

# =============================================================================
# S3/MinIO 설정 (선택사항)
# =============================================================================
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=handoc_minio
S3_SECRET_KEY=handoc_minio_password
S3_BUCKET_NAME=handoc-files
S3_REGION=us-east-1

# =============================================================================
# Google Drive 설정 (선택사항)
# =============================================================================
GDRIVE_SERVICE_JSON=path/to/service-account.json

# =============================================================================
# Rate Limiting 설정
# =============================================================================
RATE_LIMIT_REQUESTS_PER_HOUR=100
RATE_LIMIT_PREMIUM_REQUESTS_PER_HOUR=500
RATE_LIMIT_UPLOADS_PER_DAY=50
RATE_LIMIT_PREMIUM_UPLOADS_PER_DAY=200

# =============================================================================
# 이메일 설정 (선택사항)
# =============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_TLS=true
EMAIL_FROM=noreply@handoc.ai
EMAIL_FROM_NAME=HanDoc AI

# =============================================================================
# 모니터링 설정 (선택사항)
# =============================================================================
SENTRY_DSN=your-sentry-dsn-here

# =============================================================================
# Celery 설정 (백그라운드 작업용)
# =============================================================================
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# =============================================================================
# 소셜 로그인 설정 (선택사항)
# =============================================================================
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# =============================================================================
# 결제 설정 (선택사항)
# =============================================================================
STRIPE_PUBLIC_KEY=pk_test_your-stripe-public-key
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# =============================================================================
# 프론트엔드 URL
# =============================================================================
FRONTEND_URL=http://localhost:3000

# =============================================================================
# CORS 설정
# =============================================================================
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:3001","http://localhost:8080","https://handoc.ai","https://www.handoc.ai"]

# =============================================================================
# 로깅 설정
# =============================================================================
LOG_FILE_PATH=./logs/app.log
LOG_MAX_SIZE=10MB
LOG_BACKUP_COUNT=5

# =============================================================================
# 백업 설정 (선택사항)
# =============================================================================
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=handoc-backups

# =============================================================================
# 알림 설정 (선택사항)
# =============================================================================
SLACK_WEBHOOK_URL=your-slack-webhook-url
DISCORD_WEBHOOK_URL=your-discord-webhook-url

# =============================================================================
# 캐시 설정
# =============================================================================
CACHE_TTL_DEFAULT=3600
CACHE_TTL_USER_DATA=1800
CACHE_TTL_ANALYSIS_RESULT=86400

